  <div class="field">
    <%= f.label :type_id %><br>
    <%= f.collection_select :type_id, Type.all, :id, :name, prompt: true %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
